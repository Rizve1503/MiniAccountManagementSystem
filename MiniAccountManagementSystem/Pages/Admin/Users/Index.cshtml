@page
@model MiniAccountManagementSystem.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>User Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @* This is a loop. It goes through each user in the Model.Users list. *@
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @* This link goes to our (future) Manage page. *@
                    @* It passes the user's ID in the URL so the next page knows who to manage. *@
                    <a class="btn btn-primary" asp-page="./Manage" asp-route-userId="@user.Id">
                        Manage Roles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>