@page
@model MiniAccountManagementSystem.Pages.Admin.Configuration.Banks.IndexModel
@{
    ViewData["Title"] = "Manage Banks";
}

<h1>@ViewData["Title"]</h1>
<p><a asp-page="./CreateBank" class="btn btn-primary">Add New Bank</a></p>

<table class="table">
    <thead><tr><th>Bank Name</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var bank in Model.BankList)
        {
            <tr>
                <td>@bank.BankName</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@bank.Id" onsubmit="return confirm('Are you sure you want to delete this bank and ALL its branches?');">
                        <a asp-page="./EditBank" asp-route-id="@bank.Id" class="btn btn-info btn-sm">Edit</a>
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>