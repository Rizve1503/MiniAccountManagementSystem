@page
@model MiniAccountManagementSystem.Pages.Transactions.Vouchers.IndexModel
@{
    ViewData["Title"] = "Voucher Register";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Create New Voucher</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Date</th>
            <th>Voucher Type</th>
            <th>Reference No.</th>
            <th>Narration</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.VoucherList.Any())
        {
            @foreach (var voucher in Model.VoucherList)
            {
                <tr>
                    <td>@voucher.VoucherDate.ToString("dd-MMM-yyyy")</td>
                    <td>@voucher.VoucherType</td>
                    <td>@voucher.ReferenceNo</td>
                    <td>@voucher.Narration</td>
                    <td>@voucher.CreatedBy</td>
                    <td>
                        @* This link will go to a "Details" page we will build next *@
                        <a asp-page="./Details" asp-route-id="@voucher.Id" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No vouchers found.</td>
            </tr>
        }
    </tbody>
</table>